<body>
    <header>
        <h1>Новости Норвегии</h1>
    </header>
    <div class="container">
        <div id="news"></div> <!-- Это место, куда будут вставляться новости -->
    </div>

    <!-- Иконка для возврата на главную -->
    <a href="index.html" class="home">
        <i class="fa-solid fa-house"></i>
    </a>

    <script>
        const apiKey = "62a9aae7a6f34cc3a564257c3dbaa859"; // Это твой API ключ
        const newsContainer = document.getElementById('news');

        // Функция для получения новостей
        async function fetchNews() {
            const url = https://newsapi.org/v2/top-headlines?country=no&apiKey=${apiKey};
            const response = await fetch(url);
            const data = await response.json();
            
            if (data.status === "ok") {
                let newsHTML = '';
                data.articles.forEach(article => {
                    newsHTML += `
                        <div class="news">
                            <h3>${article.title}</h3>
                            <p>${article.description}</p>
                            <a href="${article.url}" target="_blank">Читать далее</a>
                        </div>
                    `;
                });
                newsContainer.innerHTML = newsHTML;
            } else {
                newsContainer.innerHTML = '<p>Не удалось загрузить новости. Попробуйте позже.</p>';
            }
        }

        // Загружаем новости при открытии страницы
        fetchNews();
    </script>
</body>
